<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wifibs.dexian.secretdevltd.com.wifibikesecurity.Locker">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <Button
           android:id="@+id/btn_setting"
           android:layout_width="70dp"
           android:layout_height="44dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:layout_marginBottom="15dp"
           android:layout_marginEnd="14dp"
           android:layout_marginRight="14dp"
           android:text="Setting"
           android:textSize="10dp" />

       <LinearLayout
           android:id="@+id/ll_linearlay"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center">

           <TextView
               android:id="@+id/tv_connected"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Connect..."
               android:gravity="center"
               android:textSize="25dp"
               android:textColor="#00911f"
               android:textStyle="bold"
               android:layout_marginBottom="20dp"/>

           <ImageView
               android:id="@+id/iv_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/locked"
               android:layout_marginBottom="15dp"
               />

           <TextView
               android:id="@+id/tv_statusText"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Touch to unlock your bike"
               android:gravity="center"
               />

       </LinearLayout>
<!--
       <Button
           android:id="@+id/btn_Connect"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_alignTop="@+id/btn_setting"
           android:layout_marginLeft="18dp"
           android:layout_marginStart="18dp"
           android:text="Connect" />

           -->

       <Button
           android:id="@+id/btn_Alarm"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_alignTop="@+id/btn_setting"
           android:layout_marginLeft="18dp"
           android:layout_marginStart="18dp"
           android:text="Alarm" />

   </RelativeLayout>


</android.support.constraint.ConstraintLayout>
